                           <Label fx:id="day4min" text="1°C">
                              <HBox.margin>
                                 <Insets left="5" />
                              </HBox.margin>
                           </Label>
                           <Region HBox.hgrow="ALWAYS" />
                           <Label fx:id="day4max" text="99°C">
                              <HBox.margin>
                                 <Insets right="5" />
                              </HBox.margin>
                           </Label>
                        </HBox>
                     </VBox>

                  </VBox>
                  <Region HBox.hgrow="ALWAYS" />
                  <VBox alignment="CENTER" spacing="10" HBox.hgrow="ALWAYS">
                     <VBox alignment="CENTER" spacing="10">
                        <Label fx:id="day5date" text="9.11" />
                        <ImageView fx:id="day5icon" />
                        <HBox alignment="CENTER">
                           <Label fx:id="day5min" text="1°C">
                              <HBox.margin>
                                 <Insets left="5" />
