<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" spacing="10" alignment="CENTER" prefWidth="400" prefHeight="300">
   <padding>
      <Insets top="20" right="20" bottom="20" left="20" />
   </padding>

   <Label text="Aplikacja Pogodowa" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

   <HBox spacing="10" alignment="CENTER">
      <Label text="Wpisz miasto:" />

      <TextField fx:id="cityTextField" />
   </HBox>

   <Button text="Sprawdź pogodę" onAction="#checkWeather" />

   <Label fx:id="weatherLabel" />

</VBox>
